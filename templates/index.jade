doctype html
html(lang="en")
  head
    title= name
    style
      include ../layout.css
      include ../style.css
  body
    .background
    div.header
      each section in sections
        a(href="#" + section.title.toLowerCase())
          =section.title
    section
      img(src=icon)
      .downarrow v
    each aSection in sections
      section.content(id=aSection.title.toLowerCase())
        div: img(src=aSection.image)
        div=aSection.text
    script
      include ../script.js