doctype html
html(lang="en")
  head
    title= name
    link(href="layout.css", rel="stylesheet")
    link(href="style.css", rel="stylesheet")
    style
      //- include ../layout.css
      //- include ../style.css
  body
    img.background(src="background.jpg")
    div.header
      each section in sections
        a(href="#" + section.title.toLowerCase())
          =section.title
    section
      img.icon(src=icon)
      .downarrow v
    each aSection in sections
      section.content(id=aSection.title.toLowerCase())
        div: img(src=aSection.image)
        div=aSection.text
    script(src="script.js")
      //- include ../script.js
