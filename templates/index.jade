doctype html
html(lang="en")
  head
    title= name
    link(href="layout.css", rel="stylesheet")
    link(href="style.css", rel="stylesheet")
    style
      //- include ../layout.css
      //- include ../style.css
  body
    div(class=options.parallax? "background parallax": "background")
    div.header
      img.icon(src=icon)
      each section in sections
        a(href="#" + section.title.toLowerCase())
          =section.title
    section.first.flexcenter
      img.image(src=image)
      .description=name + " " + description
      //- .downarrow v
    each aSection in sections
      section(class="flexcenter content " + (aSection.className || ""), id=aSection.title.toLowerCase())
          div.section-image: img(src=aSection.image)
          div.section-text=aSection.text
    script(src="bundle.js")
      //- include ../script.js
